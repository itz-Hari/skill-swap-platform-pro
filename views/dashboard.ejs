<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Skill Swap</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container mt-4">
    <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <%= messages.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <%= messages.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    
    <h1 class="mb-4">My Dashboard</h1>
    
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Sent Requests</h5>
            <p class="display-4"><%= sentRequests.length %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Received Requests</h5>
            <p class="display-4"><%= receivedRequests.length %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title">Active Swaps</h5>
            <p class="display-4"><%= activeSwaps.length %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-lg-6 mb-4">
        <div class="card">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Received Requests</h5>
          </div>
          <div class="card-body">
            <% if (receivedRequests.length === 0) { %>
              <p class="text-muted">No requests received yet</p>
            <% } else { %>
              <% receivedRequests.forEach(request => { %>
                <div class="request-item mb-3 p-3 border rounded">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <strong><%= request.sender_name %></strong>
                      <span class="badge bg-<%= request.status === 'pending' ? 'warning' : request.status === 'accepted' ? 'success' : 'secondary' %> ms-2">
                        <%= request.status %>
                      </span>
                    </div>
                    <small class="text-muted"><%= new Date(request.created_at).toLocaleDateString() %></small>
                  </div>
                  <p class="mb-1"><strong>Offers:</strong> <%= request.skill_offer %></p>
                  <p class="mb-2"><strong>Needs:</strong> <%= request.skill_need %></p>
                  <p class="mb-2"><%= request.message %></p>
                  
                  <% if (request.status === 'pending') { %>
                    <div class="btn-group btn-group-sm">
                      <form action="/request/accept/<%= request.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success btn-sm">Accept</button>
                      </form>
                      <form action="/request/reject/<%= request.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                      </form>
                    </div>
                  <% } else if (request.status === 'accepted') { %>
                    <a href="/chat/<%= request.id %>" class="btn btn-primary btn-sm">Open Chat</a>
                  <% } %>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6 mb-4">
        <div class="card">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0">Sent Requests</h5>
          </div>
          <div class="card-body">
            <% if (sentRequests.length === 0) { %>
              <p class="text-muted">No requests sent yet</p>
            <% } else { %>
              <% sentRequests.forEach(request => { %>
                <div class="request-item mb-3 p-3 border rounded">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <strong>To: <%= request.receiver_name %></strong>
                      <span class="badge bg-<%= request.status === 'pending' ? 'warning' : request.status === 'accepted' ? 'success' : 'secondary' %> ms-2">
                        <%= request.status %>
                      </span>
                    </div>
                    <small class="text-muted"><%= new Date(request.created_at).toLocaleDateString() %></small>
                  </div>
                  <p class="mb-1"><strong>You offer:</strong> <%= request.skill_offer %></p>
                  <p class="mb-2"><strong>You need:</strong> <%= request.skill_need %></p>
                  
                  <% if (request.status === 'accepted') { %>
                    <a href="/chat/<%= request.id %>" class="btn btn-primary btn-sm">Open Chat</a>
                  <% } %>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0">Active Skill Swaps</h5>
          </div>
          <div class="card-body">
            <% if (activeSwaps.length === 0) { %>
              <p class="text-muted">No active swaps yet</p>
            <% } else { %>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Partner</th>
                      <th>Skills Exchange</th>
                      <th>Started</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% activeSwaps.forEach(swap => { %>
                      <tr>
                        <td>
                          <%= swap.sender_id === user.id ? swap.receiver_name : swap.sender_name %>
                        </td>
                        <td>
                          <small>
                            <strong>Offering:</strong> <%= swap.skill_offer %><br>
                            <strong>Learning:</strong> <%= swap.skill_need %>
                          </small>
                        </td>
                        <td><%= new Date(swap.created_at).toLocaleDateString() %></td>
                        <td>
                          <a href="/chat/<%= swap.id %>" class="btn btn-sm btn-primary">Chat</a>
                          <form action="/request/complete/<%= swap.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Mark this swap as completed?')">
                              Complete
                            </button>
                          </form>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>